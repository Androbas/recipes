<h1 align="center">Recipes List</h1>
<hr/>


<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center">

      </section>
    </div>

    <div class="col-md-10 card">
      <h4> <strong><%= recipe.name %></strong></h4>
      <p><strong>description:</strong> <%= truncate(recipe.description, length:150) %></p>
      <span class ="quiet"><small> <%= time_ago_in_words(recipe.created_at) %>  ago</small></span>
    </div>
  </div>

<% end %>
