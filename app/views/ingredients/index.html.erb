<%= render 'shared/page_title', title: "List of Ingredients"%>

<hr/>

<div class="" align="center">
  <%= will_paginate %>
  <% @ingredients.each do |ingredient| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-md-4">
          <li class="chef-title"> <%= link_to ingredient.name.capitalize, ingredient_path(ingredient) %> </li>
          <li><small> In <%= pluralize(ingredient.recipes.count, "recipe") if ingredient.recipes %> </small></li>
          <% if logged_in? and current_chef.admin? %>
            <li> <%= link_to "Edit this ingredient", edit_ingredient_path(ingredient) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
