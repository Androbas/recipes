
<%= render 'shared/errors', obj: @ingredient %>


<div class="row">
  <div class="col-md-12">
    <%= form_for(@ingredient, :html => {class: "form-group", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-10">
           <%= f.text_field :name, class: 'form-control', placeholder:"Name of ingredient",autofocus: true %>
       </div>
      </div>

      <div class="form-group">
          <div class="offset-md-2 col-md-10"><%= f.submit(@ingredient.new_record? ? "Add ingredient" : "Update Ingredient", class:"btn btn-primary btn-lg") %></div>
      </div>
    <% end %>

    <div class="col-md-4 offset-md-4">
      [<%= link_to "Cancel and return to listing", recipes_path %>]

    </div>

  </div>
</div>
