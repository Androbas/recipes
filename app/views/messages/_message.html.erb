<div class="message">
  <small><em>Created <%= time_ago_in_words(message.created_at) %> </em></small>

  <div>
    <p>
      <%= gravatar_for(message.chef, size: 50) %>
      <strong> <%= message.chef.chefname.capitalize %>: </strong>
      <span class="content"> <%= message.content %>  </span>
    </p>
  </div>

</div>
